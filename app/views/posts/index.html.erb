<div class="card-container">
  <% @posts.each do |p| %>
    <div class="card-box">
      <%= link_to post_path(p) do %>
        <div>
          <%= cl_image_tag p.photos.first.key, class: "card-img" %>
        </div>
        <ul class="card-tags-list">
          <% p.tag_list.each do |tag| %>
            <li class="card-tag"><%= link_to tag, tagged_path(tag: tag) %></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  <% end %>
</div>


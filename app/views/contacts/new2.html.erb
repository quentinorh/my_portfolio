<div class="spacer"></div>
<div class="message">
  <h2 class="red" >Message</h2>
  <%= form_for @contact do |f| %>
    <div class= "contact-form">
      <div class="g-1-4">
        <%= f.label :name, "PrÃ©nom" %></br>
        <%= f.text_field  :name, required: true, class: "contact-form-text-area" %></br>
      </div>
      <div class="g-4-9">
        <%= f.label :email %></br>
        <%= f.email_field :email, required: true, class: "contact-form-text-area" %></br>
      </div>
    </div>
    <br>
    <div>
      <%= f.label :message, "Texte" %></br>
      <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area" %></br>
      <div class= "display-none">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, :hint => 'Leave this field blank!' %>
      </div>
    </div>
    <%= f.submit ' ENVOYER ', class: 'button send-button' %>
  <% end %>
</div>
